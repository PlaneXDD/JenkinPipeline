pipeline {
    agent any

    environment {
        EMAIL_CREDS = credentials('gmail-creds')
    }

    stages {
        stage('Prepare Environment') {
            steps {
                echo 'Preparing the environment...'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                bat 'echo Build successful' // For Windows
                // sh 'echo Build successful' // For Linux/MacOS
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'echo Tests passed' // For Windows
                // sh 'echo Tests passed' // For Linux/MacOS
            }
        }

        stage('Package') {
            steps {
                echo 'Packaging the application...'
                bat 'echo Packaging done' // For Windows
                // sh 'echo Packaging done' // For Linux/MacOS
            }
        }
    }

    post {
        always {
            // Archive the console log as an artifact
            archiveArtifacts artifacts: 'console.log', allowEmptyArchive: true
            // Save the build log to a file
            script {
                writeFile file: 'console.log', text: currentBuild.rawBuild.getLog()
            }
        }

        success {
            // Send success notification email with logs attached
            mail to: 'phamthienphu2604@gmail.com',
                 subject: "Pipeline succeeded: ${currentBuild.fullDisplayName}",
                 body: "The pipeline has completed successfully. Please find the logs attached.",
                 attachLog: true,
                 attachmentsPattern: 'console.log',
                 from: "${env.EMAIL_CREDS_USR}",
                 replyTo: 'phamthienphu2604@gmail.com'
        }
        failure {
            // Send failure notification email with logs attached
            mail to: 'phamthienphu2604@gmail.com',
                 subject: "Pipeline failed: ${currentBuild.fullDisplayName}",
                 body: "The pipeline has failed. Please find the logs attached for details.",
                 attachLog: true,
                 attachmentsPattern: 'console.log',
                 from: "${env.EMAIL_CREDS_USR}",
                 replyTo: 'phamthienphu2604@gmail.com'
        }
    }
}
